<!-- Hex cell -->
  <RecipeDef>
    <defName>MakeHexcell</defName>
    <label>make hex-cells</label>
    <description>Crafts hex-cells. This is a power source for some armors. Produces 10.</description>
    <jobString>Crafting Hex-Cell.</jobString>
    <workAmount>6000</workAmount>
	<workSpeedStat>ElectronicCraftingSpeed</workSpeedStat>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MagneticMaterial</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>HCMBar</li>
          </categories>
        </filter>
        <count>4</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Microchips</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <Hexcell>10</Hexcell>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
          <li>MagneticMaterial</li>
          <li>Microchips</li>
      </thingDefs>
          <categories>
            <li>HCMBar</li>
          </categories>
    </fixedIngredientFilter>
	<defaultIngredientFilter>
	 <thingDefs>
          <li>MagneticMaterial</li>
          <li>Microchips</li>
	 </thingDefs>
          <categories>
            <li>HCMBar</li>
          </categories>
	</defaultIngredientFilter>
	<skillRequirements>
	 <li>
	  <skill>Crafting</skill>
	  <minLevel>14</minLevel>
	 </li>
	</skillRequirements>
	<workSkill>Crafting</workSkill>
		<recipeUsers>
			<li>TableElectronics</li>
		</recipeUsers>
		<researchPrerequisite>SK_Robotics</researchPrerequisite>
  </RecipeDef>


</RecipeDefs>
