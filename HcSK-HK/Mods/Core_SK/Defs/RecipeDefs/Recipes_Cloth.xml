  <RecipeDef>
    <defName>MakeVelour</defName>
    <label>make velour</label>
    <description>Crafts velour, a plush woven fabric resembling velvet, chiefly used for soft furnishings, casual clothing, and hats. Produces 25.</description>
    <jobString>Crafting Velour.</jobString>
    <workAmount>1800</workAmount>
	<workSpeedStat>TailoringSpeed</workSpeedStat>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Compaste</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>BTextiles</li>
          </categories>
        </filter>
        <count>40</count>
      </li>
    </ingredients>
    <products>
      <Velour>25</Velour>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
          <li>Compaste</li>
      </thingDefs>
          <categories>
            <li>BTextiles</li>
          </categories>
    </fixedIngredientFilter>
	<defaultIngredientFilter>
	 <thingDefs>
          <li>Compaste</li>
	 </thingDefs>
          <categories>
            <li>BTextiles</li>
          </categories>
	</defaultIngredientFilter>
	<skillRequirements>
	 <li>
	  <skill>Crafting</skill>
	  <minLevel>12</minLevel>
	 </li>
	</skillRequirements>
	<workSkill>Crafting</workSkill>
		<recipeUsers>
			<li>TableLoom</li>
		</recipeUsers>
		<researchPrerequisite>SK_Petrochemistry</researchPrerequisite>
  </RecipeDef>

