			<li>
				<filter>
					<thingDefs>
						<li>HerbalMedicine</li>
					</thingDefs>
				</filter>
				<count>6</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Paraffins</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>SyntheticFibers</li>
					</thingDefs>
				</filter>
				<count>2</count>
