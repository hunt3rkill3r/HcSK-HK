<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	<RecipeDef>
		<defName>MakeHerbMedicine</defName>
		<label>craft herbal medicine</label>
		<description>Crafts herbal medicine from Raw Healroot. Produces 1.</description>
		<jobString>Crafting herbal medicine.</jobString>
		<workAmount>500</workAmount>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Chemlab_Herbal</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>HerbalMedicine</li>
					</thingDefs>
				</filter>
				<count>8</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Ash</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<products>
			<HerbMedicine>1</HerbMedicine>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>HerbalMedicine</li>
				<li>Ash</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<li>
				<skill>Medicine</skill>
				<minLevel>6</minLevel>
			</li>
		</skillRequirements>
		<workSkill>Medicine</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
	</RecipeDef>


	<RecipeDef>
		<defName>Makeherbmeds</defName>
		<label>make herbal medical kit</label>
		<description>Combines herbs into a medical kit. Produces 1.</description>
		<jobString>Mixing herbs into medicine kit.</jobString>
		<workAmount>800</workAmount>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Chemlab_Herbal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>aloe</li>
					</thingDefs>
				</filter>
				<count>8</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>HerbalMedicine</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>aloe</li>
				<li>HerbalMedicine</li>			
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<HerbalMedicaKit>1</HerbalMedicaKit>
		</products>
		<skillRequirements>
			<li>
				<skill>Medicine</skill>
				<minLevel>10</minLevel>
			</li>
		</skillRequirements>
		<workSkill>Medicine</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
	</RecipeDef>


	<RecipeDef>
