<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>


  <ThingDef Name="BaseTurretGun" ParentName="BaseGun" Abstract="True">
    <soundInteract>InteractRifle</soundInteract>
    <weaponTags>
      <li>Gun</li>
		<li>TurretGun</li>
    </weaponTags>
    <tradeability>Never</tradeability>
    <destroyOnDrop>True</destroyOnDrop>
    <menuHidden>True</menuHidden>
    <canBeSpawningInventory>false</canBeSpawningInventory>
  </ThingDef>

  <ThingDef Name="BaseAutoTurretGun" ParentName="BaseTurretGun" Abstract="True">
		<comps>
			<li Class="Combat_Realism.CompProperties_FireModes">
				<aiUseBurstMode>FALSE</aiUseBurstMode>
				<aiUseAimMode>TRUE</aiUseAimMode>
				<noSnapshot>true</noSnapshot>
				<noSingleShot>true</noSingleShot>
			</li>
		</comps>
  </ThingDef>

  
  <ThingDef Name="BaseArtilleryGun" Abstract="True">
    <category>Item</category>
    <thingClass>ThingWithComps</thingClass>
    <label>artillery error</label>
    <equipmentType>Primary</equipmentType>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/ChargeRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tickerType>Never</tickerType>
    <techLevel>Industrial</techLevel>
    <soundInteract>ArtilleryShellLoaded</soundInteract>
	
    <tradeability>Never</tradeability>
    <destroyOnDrop>True</destroyOnDrop>
    <menuHidden>True</menuHidden>
    <canBeSpawningInventory>false</canBeSpawningInventory>
	
    <comps>
      <li>
        <compClass>CompEquippable</compClass>
      </li>
			<li Class="Combat_Realism.CompProperties_Charges">
				<charges>
					<li>(29,85)</li>
					<li>(72,300)</li>
					<li>(92,660)</li>
				</charges>
      </li>
    </comps>
  </ThingDef>

</ThingDefs>