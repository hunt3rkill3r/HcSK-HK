		<tags>
			<li>PredatorsLight</li>
			<li>PredatorsMedium</li>
		</tags>
		  <defaultOutfitTags>
			<li>Worker</li>
		  </defaultOutfitTags>
		</apparel>	
		<colorGenerator Class="ColorGenerator_Options">
		  <options>
			<li>
			  <weight>4</weight>
			  <only>RGBA(1,1,1,1)</only>
			</li>
		  </options>
		</colorGenerator>
		<thingCategories>
			<li>HeaddressCat</li>
		</thingCategories>
	</ThingDef>
	
	
