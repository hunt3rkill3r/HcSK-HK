<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <TaleDef>
    <defName>MentalStateTantrum</defName>
    <label>destructive rage</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>4</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->[pawn_nameShortDef] throwing a tantrum</li>
        <li>image->[pawn_nameFull] flying into a destructive rage [circumstance_group]</li>
		<li>image->[pawn_nameFull] taking [pawn_possessive] anger out on furniture [circumstance_group]</li>
        <li>image->[pawn_nameFull] stumbling into furniture with a psychotic look on [pawn_possessive] face [circumstance_group]</li>
        <li>circumstance_phrase->while violently cursing</li>
        <li>circumstance_phrase->seemingly without reason</li>
        <li>circumstance_phrase->as others cower in fear</li>
        <li>circumstance_phrase->as others watch in horror</li>
        <li>circumstance_phrase->because of the stress</li>
        <li>circumstance_phrase->while screaming</li>
        <li>desc_sentence->[pawn_pronoun] is shaking with ungovernable rage.</li>
        <li>desc_sentence->[pawn_possessive] teeth are bared in a deadly snarl.</li>
        <li>desc_sentence->[pawn_possessive] eyes are dead pools of madness.</li>
        <li>desc_sentence->[pawn_pronoun] has bruised [pawn_possessive] fists.</li>
        <li>desc_sentence->[pawn_pronoun] is grimacing in misery.</li>
        <li>desc_sentence->[pawn_pronoun] is holding a chair over [pawn_possessive] head.</li>
        <li>desc_sentence->[pawn_possessive] entire body is trembling with hatred.</li>
        <li>desc_sentence->A single tear rolls down [pawn_possessive] face.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>
  
  <TaleDef>
    <defName>MentalStateSelfHarm</defName>
    <label>deep depression</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>4</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->[pawn_nameShortDef] slicing their wrists</li>
        <li>image->[pawn_nameFull] cutting [pawn_possessive] wrists [circumstance_group]</li>
		<li>image->[pawn_nameFull] sitting in a pool of [pawn_possessive] blood [circumstance_group]</li>
        <li>image->[pawn_nameFull] staring off into the distance [circumstance_group]</li>
        <li>circumstance_phrase->while whimpering</li>
        <li>circumstance_phrase->while cowering in [pawn_possessive] room</li>
        <li>circumstance_phrase->without speaking a word</li>
        <li>circumstance_phrase->while crying</li>
        <li>desc_sentence->[pawn_pronoun] looks pale and sickly.</li>
        <li>desc_sentence->[pawn_possessive] arms are limp.</li>
		<li>desc_sentence->[pawn_possessive] clothes are stained with blood.</li>
        <li>desc_sentence->[pawn_pronoun] is sitting on the floor, rocking back and forth.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>
  
  <TaleDef>
    <defName>MentalStateApathy</defName>
    <label>apathy</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>4</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->[pawn_nameShortDef] wandering around apathetically</li>
        <li>image->[pawn_nameFull] wandering around the colony apathetically [circumstance_group]</li>
		<li>image->[pawn_nameFull] sitting around lethargically [circumstance_group]</li>
        <li>image->[pawn_nameFull] avoiding doing [pawn_possessive] chores [circumstance_group]</li>
		<li>image->[pawn_nameFull] reluctantly doing [pawn_possessive] chores [circumstance_group]</li>
		<li>image->[pawn_nameFull] slacking off [circumstance_group]</li>
        <li>circumstance_phrase->with an annoyed look on [pawn_possessive] face</li>
        <li>circumstance_phrase->while pouting</li>
        <li>circumstance_phrase->while grumbling</li>
		<li>desc_sentence->[pawn_pronoun] looks exhausted.</li>
        <li>desc_sentence->[pawn_possessive] arms are crossed.</li>
        <li>desc_sentence->[pawn_pronoun] looks like [pawn_pronoun] couldn't care less.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>
  
  <TaleDef>
    <defName>MentalStateSadism</defName>
    <label>sadism</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>4</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->[pawn_nameShortDef] laughing sadistically</li>
        <li>image->[pawn_nameFull] brandishing [pawn_possessive] weapon [circumstance_group]</li>
		<li>image->[pawn_nameFull] mumbling under their breath [circumstance_group]</li>
        <li>image->[pawn_nameFull] looking for a victim to brutalize [circumstance_group]</li>
        <li>circumstance_phrase->while wandering around</li>
        <li>circumstance_phrase->while smiling cruelly</li>
		<li>circumstance_phrase->while grinning menacingly</li>
        <li>desc_sentence->[pawn_pronoun] looks like [pawn_pronoun] has lost [pawn_possessive] mind.</li>
        <li>desc_sentence->[pawn_possessive] left eye is twitching.</li>
		<li>desc_sentence->[pawn_possessive] hands are shaking.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>
  
  <TaleDef>
    <defName>MentalStateCompulsion</defName>
    <label>compulsion</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>4</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->[pawn_nameShortDef] neurotically cleaning</li>
        <li>image->[pawn_nameFull] obsessively organizing resources [circumstance_group]</li>
		<li>image->[pawn_nameFull] covered in dirt and grime [circumstance_group]</li>
        <li>image->[pawn_nameFull] scrubbing the floors obsessively [circumstance_group]</li>
        <li>circumstance_phrase->while mumbling under [pawn_possessive] breath</li>
        <li>circumstance_phrase->while sweating profusely</li>
		<li>circumstance_phrase->while struggling to stay awake</li>
        <li>desc_sentence->[pawn_pronoun] looks like [pawn_pronoun] hasn't slept in days.</li>
		<li>desc_sentence->[pawn_pronoun] looks malnourished and hungry.</li>
		<li>desc_sentence->[pawn_possessive] hands are trembling.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>
  
  <TaleDef>
    <defName>MentalStateAbuse</defName>
    <label>verbal abuse</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>4</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->[pawn_nameShortDef] screaming angrily</li>
        <li>image->[pawn_nameFull] pacing back and forth [circumstance_group]</li>
		<li>image->[pawn_nameFull] stomping around [circumstance_group]</li>
		<li>image->[pawn_nameFull] looking for somebody to start an argument with [circumstance_group]</li>
        <li>image->[pawn_nameFull] looking for somebody to yell at [circumstance_group]</li>
        <li>circumstance_phrase->while others watch disapprovingly</li>
        <li>circumstance_phrase->while others shake their heads in disapproval</li>
		<li>circumstance_phrase->while others avoid making eye contact</li>
		<li>desc_sentence->Spittle is flying from [pawn_possessive] mouth.</li>
        <li>desc_sentence->[pawn_possessive] face is bright red.</li>		
		<li>desc_sentence->[pawn_possessive] entire body is trembling with fury.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>
  
  <TaleDef>
    <defName>MentalStateAntisocial</defName>
    <label>antisocial</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>4</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->[pawn_nameShortDef] leaving the colony</li>
        <li>image->[pawn_nameFull] distancing themselves from the colony [circumstance_group]</li>
		<li>image->[pawn_nameFull] avoiding interaction with other colonists [circumstance_group]</li>
		<li>image->[pawn_nameFull] walking away [circumstance_group]</li>
		<li>image->[pawn_nameFull] running away [circumstance_group]</li>
		<li>image->[pawn_nameFull] walking into the wilderness [circumstance_group]</li>
		<li>image->[pawn_nameFull] running into the wilderness [circumstance_group]</li>
        <li>circumstance_phrase->because of the stress</li>
        <li>circumstance_phrase->with an emotionless look on [pawn_possessive] face</li>
		<li>circumstance_phrase->with a paranoid look on [pawn_possessive] face</li>
		<li>desc_sentence->[pawn_pronoun] looks tired and weary.</li>
        <li>desc_sentence->[pawn_possessive] face is pale.</li>		
		<li>desc_sentence->[pawn_possessive] head is hung low.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>

</Defs>