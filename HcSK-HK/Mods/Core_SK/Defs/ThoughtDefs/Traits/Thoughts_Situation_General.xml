<?xml version="1.0" encoding="utf-8" ?>  

<Thoughts>

  <ThoughtDef>
    <defName>EnvironmentDarkGood</defName>
    <workerClass>ThoughtWorker_Dark</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
	<requiredTraits>
		<li>Photophobia</li>
	</requiredTraits>
    <stages>
      <li>
        <label>in darkness</label>
        <description>I've been in the dark for a while. I like it.</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>CabinFeverGood</defName>
    <workerClass>ThoughtWorker_CabinFever</workerClass>
	<requiredTraits>
		<li>Agoraphobia</li>
	</requiredTraits>
    <stages>
      <li>
        <label>cabin fever (mild)</label>
        <description>I've been cooped up inside for days. The way I like it.</description>
        <baseMoodEffect>7</baseMoodEffect>
      </li>
       <li>
        <label>cabin fever (serious)</label>
        <description>I've been safely inside for so long now. Can this get any better?</description>
        <baseMoodEffect>15</baseMoodEffect>
      </li>   
    </stages>
  </ThoughtDef>
 

  
</Thoughts>