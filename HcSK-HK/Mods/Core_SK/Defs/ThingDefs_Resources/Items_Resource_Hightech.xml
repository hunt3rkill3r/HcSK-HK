<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>
	<!--=============== Antimatter ====================-->
	
	
	<ThingDef ParentName="ResourceBase">
		<defName>Antimatter</defName>
		<label>AntiMatter</label>
		<description>AntiMatter in the form of anti-atoms is one of the most difficult materials to produce. AntiMatter in the form of individual anti-particles however, is commonly produced by particle accelerators and in some types of radioactive decay.</description>
		<graphicData>
			<texPath>Things/Item/Resource/Antimatter</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<stackLimit>75</stackLimit>
		<tradeability>Never</tradeability>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Metal_Drop</soundDrop>
		<statBases>
			<MaxHitPoints>5</MaxHitPoints>
			<MarketValue>120</MarketValue>
			<DeteriorationRate>0.01</DeteriorationRate>
			<Flammability>5</Flammability>
			<MaxBurningTempCelsius>10000</MaxBurningTempCelsius>
			<BurnDurationHours>12</BurnDurationHours>
		</statBases>
		<tickerType>Normal</tickerType>
		 <comps>
				<li Class="CompProperties_Explosive">
				<explosiveRadius>1.5</explosiveRadius>
				<explosiveDamageType>Bomb</explosiveDamageType>
				<explosiveExpandPerStackcount>0.5</explosiveExpandPerStackcount>
				<startWickHitPointsPercent>0.333</startWickHitPointsPercent>
				<wickTicks>
				  <min>5</min>
				  <max>10</max>
				</wickTicks>
			  </li>
		</comps>
		<thingCategories>
			<li>SuperMaterialCat</li>
		</thingCategories>
	</ThingDef>
	
	
	<!--=============== Magnetic material ====================-->
	
	
	<ThingDef ParentName="ResourceBase">
		<defName>MagneticMaterial</defName>
		<label>Magnetic Material</label>
		<description>An advanced combination of strong magnetic materials. Creation of such material is beyond the fabrication skills of anyone but an electromagnetic physicist.</description>
		<graphicData>
			<texPath>Things/Item/Resource/MagneticMaterial</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<stackLimit>75</stackLimit>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Metal_Drop</soundDrop>
		<tickerType>Rare</tickerType>
		<statBases>
			<MarketValue>110</MarketValue>
			<DeteriorationRate>0</DeteriorationRate>
			<Flammability>0.1</Flammability>
		</statBases>
		<tradeability>Never</tradeability>
		<thingCategories>
			<li>SuperMaterialCat</li>
		</thingCategories>
	</ThingDef>
	
	
		<!--=============== Biosynthetic material ====================-->
		
		
