		<graphicData>
			<texPath>Things/Item/Resource/BiosyntheticMaterial</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<stackLimit>75</stackLimit>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Metal_Drop</soundDrop>
		<tickerType>Rare</tickerType>
		<statBases>
			<MarketValue>90</MarketValue>
			<DeteriorationRate>0</DeteriorationRate>
			<Flammability>0.3</Flammability>
		</statBases>
		<tradeability>Never</tradeability>
		<thingCategories>
			<li>SuperMaterialCat</li>
		</thingCategories>
	</ThingDef>
	
	
  <ThingDef ParentName="ResourceBase">
    <defName>Hexcell</defName>
    <label>HexCell</label>
    <description>A compact energy storing device. It is generally used for powering advanced weaponry or shock absorbers in powered armor.</description>
    <graphicData>
      <texPath>Things/Item/HexCell</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stackLimit>50</stackLimit>
    <useHitPoints>true</useHitPoints>
    <statBases>
		<MaxHitPoints>10</MaxHitPoints>
		<MarketValue>150</MarketValue>
		<DeteriorationRate>0.02</DeteriorationRate>
		<Flammability>5</Flammability>
    </statBases>
		<tickerType>Normal</tickerType>
		 <comps>
				<li Class="CompProperties_Explosive">
				<explosiveRadius>1.4</explosiveRadius>
				<explosiveDamageType>Flame</explosiveDamageType>
				<explosiveExpandPerStackcount>0.2</explosiveExpandPerStackcount>
				<startWickHitPointsPercent>0.333</startWickHitPointsPercent>
				<wickTicks>
				  <min>5</min>
				  <max>10</max>
				</wickTicks>
			  </li>
		</comps>
		<thingCategories>
			<li>CTextiles</li>
		</thingCategories>
  </ThingDef>

</ThingDefs>