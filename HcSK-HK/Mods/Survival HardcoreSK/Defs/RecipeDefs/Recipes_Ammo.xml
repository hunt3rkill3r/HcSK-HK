<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	<RecipeDef>
		<defName>MakePowder</defName>
		<label>make gunpowder</label>
		<description>Makes Gunpowder that is useful for making ammo shells for turrets. Raw nitre is mixed with the chemical extracts that can be found in coal and iron ores. Produces 10.</description>
		<jobString>Making Gunpowder.</jobString>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>2500</workAmount>
		<targetCountAdjustment>5</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Nitre</li>
					</thingDefs>
				</filter>
				<count>35</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Coal</li>
					</categories>
				</filter>
				<count>15</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Nitre</li>
				<li>Steel</li>
			</thingDefs>
			<categories>
				<li>Coal</li>
			</categories>	  
		</fixedIngredientFilter>
		<products>
			<Powder>10</Powder>
		</products>
		<recipeUsers>
			<li>AmmoBench</li>
		</recipeUsers>
		<skillRequirements>
			<li>
				<skill>Crafting</skill>
				<minLevel>3</minLevel>
			</li>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
	</RecipeDef>

	<RecipeDef>
		<defName>MakeNapalm</defName>
		<label>make napalm</label>
		<description>Makes Napalm, a flammable chemical weapon. Produces 10.</description>
		<jobString>Making Napalm.</jobString>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>1200</workAmount>
		<targetCountAdjustment>5</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Fuel</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Polymers</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Fuel</li>
				<li>Polymers</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Napalm>10</Napalm>
		</products>
		<skillRequirements>
			<li>
				<skill>Crafting</skill>
				<minLevel>5</minLevel>
			</li>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>SK_Petrochemistry</researchPrerequisite>
	</RecipeDef>

</RecipeDefs>