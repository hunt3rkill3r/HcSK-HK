    <symbol>Motes/RUM_Mote_Dove</symbol>
    <initiatorXpGainSkill>Social</initiatorXpGainSkill>
    <initiatorXpGainAmount>10</initiatorXpGainAmount>
    <logRulesInitiator>
      <rulesStrings>
        <li>logentry->Tried to convince [other_nameShortIndef] to forgive a slight.</li>
