  </InteractionDef>

  <InteractionDef>
    <defName>SharedSecret</defName>
    <label>shared secret</label>
    <workerClass>RumoursAndDeception.InteractionWorker_SharedSecret</workerClass>
    <symbol>Motes/RUM_Mote_Mask</symbol>
    <initiatorThought>SharedSecret</initiatorThought>
    <initiatorXpGainSkill>Social</initiatorXpGainSkill>
    <initiatorXpGainAmount>10</initiatorXpGainAmount>
    <recipientThought>ReceivedSecret</recipientThought>
    <logRulesInitiator>
      <rulesStrings>
        <li>logentry->Shared a secret with [other_nameShortIndef].</li>
      </rulesStrings>
    </logRulesInitiator>
    <logRulesRecipient>
      <rulesStrings>
        <li>logentry->[other_nameShortIndef] shared a secret with me.</li>
      </rulesStrings>
    </logRulesRecipient>
  </InteractionDef>
  
  <InteractionDef>
    <defName>RevealSecret</defName>
    <label>reveal secret</label>
    <workerClass>RumoursAndDeception.InteractionWorker_RevealSecret</workerClass>
    <symbol>Motes/RUM_Mote_Mask</symbol>
    <initiatorXpGainSkill>Social</initiatorXpGainSkill>
    <initiatorXpGainAmount>5</initiatorXpGainAmount>
    <logRulesInitiator>
      <rulesStrings>
        <li>logentry->Revealed another colonist's secret to [other_nameShortIndef].</li>
      </rulesStrings>
    </logRulesInitiator>
    <logRulesRecipient>
      <rulesStrings>
        <li>logentry->[other_nameShortIndef] revealed another colonist's secret to me.</li>
