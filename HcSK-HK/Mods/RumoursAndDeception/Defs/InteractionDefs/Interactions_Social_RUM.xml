<InteractionDefs>

  <InteractionDef>
    <defName>ChattedAboutSomeone</defName>
    <label>chatted about someone</label>
    <workerClass>RumoursAndDeception.InteractionWorker_ChattedAboutSomeone</workerClass>
    <symbol>Things/Mote/SpeechSymbols/Chitchat</symbol>
    <initiatorThought>Chitchat</initiatorThought>
    <initiatorXpGainSkill>Social</initiatorXpGainSkill>
    <initiatorXpGainAmount>4</initiatorXpGainAmount>
    <recipientThought>Chitchat</recipientThought>
    <logRulesInitiator>
      <rulesStrings>
        <li>logentry->Chat with [other_nameShortIndef] about the other colonists.</li>
      </rulesStrings>
    </logRulesInitiator>
  </InteractionDef>


 <InteractionDef>
    <defName>Apologise</defName>
    <label>make peace</label>
    <workerClass>RumoursAndDeception.InteractionWorker_Apologise</workerClass>
    <symbol>Motes/RUM_Mote_Dove</symbol>
    <initiatorXpGainSkill>Social</initiatorXpGainSkill>
    <initiatorXpGainAmount>10</initiatorXpGainAmount>
    <logRulesInitiator>
      <rulesStrings>
        <li>logentry->Apologised to [other_nameShortIndef].</li>
      </rulesStrings>
    </logRulesInitiator>
    <logRulesRecipient>
      <rulesStrings>
        <li>logentry->Was apologised to by [other_nameShortIndef].</li>
      </rulesStrings>
    </logRulesRecipient>
  </InteractionDef>


 <InteractionDef>
    <defName>MakePeace</defName>
